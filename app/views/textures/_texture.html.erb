<div id="<%= dom_id texture %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Uid:</strong>
    <%= texture.uid %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= texture.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Origin:</strong>
    <%= texture.origin %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this texture", texture, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this texture', edit_texture_path(texture), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
